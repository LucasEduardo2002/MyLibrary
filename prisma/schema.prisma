generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {

  id        Int       @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String

  //Um usuário pode ter vários livros
  book      Book[]

}

model Book {
  id            Int        @id @default(autoincrement())
  name          String
  bookGenres    String?
  author        String?
  pages         Int?

  //Relacionamento entre um livro para um usuário
  userId        Int
  user          User    @relation(fields: [userId], references: [id])
}